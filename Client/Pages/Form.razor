@page "/form"

<PageTitle>Formulaire</PageTitle>


<EditForm class="form" EditContext="@EditContext" OnSubmit=@ValidFormSubmitted>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputEmail4">Email</label>
            <InputText @bind-Value="guest!.Name" type="email" class="form-control" id="inputEmail4" placeholder="Email" />
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Password</label>
            <InputText @bind-Value="guest!.Name"  type="password" class="form-control" id="inputPassword4" placeholder="Password" />
        </div>
    </div>
    <div class="form-group">
        <label for="inputAddress">Address</label>
        <InputText @bind-Value="guest!.Name" type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" />
    </div>
    <div class="form-group">
        <label for="inputAddress2">Address 2</label>
        <InputText @bind-Value="guest!.Name" type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor" />
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <InputText @bind-Value="guest!.Name" type="text" class="form-control" id="inputCity" />
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <InputSelect id="inputState" class="form-control" @bind-Value="guest!.Name">
                @foreach (var guest in guestList)
                {
                    if (guestList.IndexOf(guest) == 0)
                    {
                        <option selected>@guest.Name</option>
                    }
                    else
                    {
                        <option>@guest.Name</option>
                    }
                }
            </InputSelect>
        </div>
        <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <InputText type="text" class="form-control" id="inputZip"/>
        </div>
    </div>
    <div class="form-group">
        <div class="form-check">
            <InputText class="form-check-input" type="checkbox" id="gridCheck"/>
            <label class="form-check-label" for="gridCheck">
                Check me out
            </label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Sign in</button>
</EditForm>